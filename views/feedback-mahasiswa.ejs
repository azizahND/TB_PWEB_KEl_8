<!-- views/form.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Feedback Mahasiswa</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            margin: 0;
        }
        .sidebar {
            width: 200px;
            background-color: #2F4F4F;
            color: white;
            height: 100vh;
            padding-top: 20px;
        }
        .sidebar img {
            display: block;
            margin: 0 auto;
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }
        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }
        .sidebar ul li {
            padding: 10px;
            text-align: center;
        }
        .sidebar ul li a {
            color: white;
            text-decoration: none;
        }
        .content {
            flex-grow: 1;
            padding: 20px;
        }
        .form-container {
            background-color: #f4f4f4;
            padding: 20px;
            border-radius: 8px;
        }
        .form-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .form-container label {
            display: block;
            margin: 10px 0 5px;
        }
        .form-container input[type="text"], .form-container textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .form-container input[type="file"] {
            margin-bottom: 10px;
        }
        .form-container button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <img src="images/rektorat.jpeg" alt="Profile Picture">
        <ul>
            <li><a href="/dashboard.ejs">Dashboard</a></li>
            <li><a href="/evaluasi.ejs">Evaluasi</a></li>
            <li><a href="/feedback-mahasiswa.ejs">Feedback</a></li>
            <li><a href="/notifikasi.ejs">Notifikasi</a></li>
            <li><a href="/profile.ejs">Profile</a></li>
            <li><a href="/logout.ejs">Logout</a></li>
        </ul>
    </div>
    <div class="content">
        <div class="form-container">
            <h1>Feedback</h1>
            <form action="/submit" method="post" enctype="multipart/form-data">
                <label for="pertanyaan1">Pertanyaan 1</label>
                <input type="text" id="pertanyaan1" name="pertanyaan1">
                
                <label for="pertanyaan2">Pertanyaan 2</label>
                <input type="text" id="pertanyaan2" name="pertanyaan2">
                
                <label for="keluhan">Keluhan</label>
                <textarea id="keluhan" name="keluhan"></textarea>
                
                <label for="bukti_keluhan">Bukti Keluhan (jika ada)</label>
                <input type="file" id="bukti_keluhan" name="bukti_keluhan">
                
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>

